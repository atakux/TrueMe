{
  "expo": {
    "name": "TrueMe",
    "slug": "trueme",
    "version": "1.0.5",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.trueme",
      "buildNumber": "11",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Allow TrueMe to access your photos to let you customize your profile.",
        "NSPhotoLibraryAddUsageDescription": "Allow TrueMe to save photos for facial recognition."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.trueme",
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_MEDIA_LOCATION"
      ],
      "versionCode": 16
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you customize your profile."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow TrueMe to access your photos.",
          "savePhotosPermission": "Allow TrueMe to save photos.",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "5edc955a-03aa-429a-9a61-a1766c65b239"
      }
    },
    "owner": "trueme_dev_team",
    "runtimeVersion": "1.0.0",
    "updates": {
      "url": "https://u.expo.dev/5edc955a-03aa-429a-9a61-a1766c65b239"
    }
  }
}
